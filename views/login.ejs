<!-- views/login.ejs -->
<!doctype html>
<html>
<head>
    <title>Production Lines Quota - Login</title>
    <% include ./partials/head %>

	<script type="text/javascript" language="javascript">
        function FilterInput (event) {
            var keyCode = ('which' in event) ? event.which : event.keyCode;

            isAsterix = (keyCode == 222);
			//alert(keyCode);
            modifiers = (event.shiftKey);
            return !isAsterix || modifiers;
        }
    </script>
</head>  
<body>
<div class="container">
  
  <div class="col-sm-6 col-sm-offset-3">

      <h1><span class="fa fa-sign-in"></span> Login</h1>

      <!-- show any messages that come back with authentication -->
      <% if (message.length > 0) { %>
          <div class="alert alert-danger"><%= message %></div>
      <% } %>

      <!-- LOGIN FORM -->
      <form action="/login" method="post">
          <div class="form-group">
              <label>Username</label>
              <input type="text" class="form-control" name="username" onkeydown="return FilterInput (event)"></input>
          </div>
          <div class="form-group">
              <label>Password</label>
              <input type="password" class="form-control" name="password"></input>
          </div>

          <button type="submit" class="btn btn-warning btn-lg">Login</button>
      </form>

        <!--hr>

        <p> Need an account? <a href="/profile">Signup</a> </p-->
      <!-- <p>Or go <a href="/">home</a>.</p> -->

  </div>

</div>
 
  
  <footer>
    <% include ./partials/footer %>
  </footer>
</body>
</html>